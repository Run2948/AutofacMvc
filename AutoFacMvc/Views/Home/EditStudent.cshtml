@model Student

@{
    ViewBag.Title = Model.Id > 0 ? "Add Student" : "Edit Student";
}

<h1></h1>
@using (Html.BeginForm())
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>@ViewBag.Title</h3>
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="@nameof(Model.Age)">@nameof(Model.Name)</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @style = "max-width:200px;" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="@nameof(Model.Age)">@nameof(Model.Age)</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Age, new { @class = "form-control", @style = "max-width:200px;", @type = "number" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a class="btn btn-default" href="@Url.Action("Index")">Return</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
